{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "NodeNext",
    "outDir": "dist",
    "lib": ["ES2023", "DOM"],
    "strict": true,
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@lib": ["src/lib/index.js"],
      "@types": ["src/types/index.js"],
      "@this-package": ["src/lib/index.js"]
    }
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.mts",
    "eslint.config.js",
    "lint-staged.config.cjs"
  ]
}
